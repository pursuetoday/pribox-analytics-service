{
	"name": "nodejs-api-boilerplate",
	"version": "0.0.1-development",
	"description": "A boilerplate for writing micro-services in Node.js",
	"license": "MIT",
	"main": "src/index.js",
	"scripts": {
		"dev": "nodemon --exec babel-node src/index.js",
		"clean": "rimraf --glob dist/*",
		"build": "yarn clean && babel src -d dist --copy-files",
		"serve": "node dist/index.js",
		"start:dev": "npm run build && nodemon dist/index.js",
		"start:prod": "npm run build && npm run serve",
		"lint": "eslint . --ext .js",
		"lint:fix": "eslint --fix . --ext .js",
		"prettier": "prettier --check src/**/*.js",
		"prettier:fix": "prettier --write src/**/*.js",
		"format": "yarn prettier:fix && yarn lint:fix"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mateeqazam/nodejs-api-boilerplate.git"
	},
	"author": {
		"name": "Muhammad Ateeq Azam",
		"email": "contact@ateeqazam.me"
	},
	"keywords": [
		"node",
		"node.js",
		"es6",
		"express",
		"API",
		"microservice",
		"boilerplate",
		"starter kit",
		"starter project"
	],
	"dependencies": {
		"@azure/msal-node": "^1.17.0",
		"@microsoft/microsoft-graph-client": "^3.0.5",
		"express": "^4.18.1",
		"imap-simple": "^5.1.0",
		"isomorphic-fetch": "^3.0.0",
		"mailparser": "^3.6.4",
		"moment": "^2.29.4",
		"mongoose": "^7.0.3",
		"node-cron": "^3.0.2",
		"nodemailer": "^6.9.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.18.6",
		"@babel/core": "^7.18.6",
		"@babel/node": "^7.18.6",
		"@babel/preset-env": "^7.18.6",
		"eslint": "^8.45.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-prettier": "^5.0.0",
		"nodemon": "^2.0.18",
		"prettier": "^3.0.0",
		"rimraf": "^5.0.1"
	}
}
